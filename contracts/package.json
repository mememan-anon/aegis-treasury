{
  "name": "aegis-treasury-contracts",
  "version": "1.0.0",
  "description": "AegisTreasury smart contracts",
  "scripts": {
    "compile": "HOME=/tmp/hardhat-home npx hardhat compile",
    "test": "HOME=/tmp/hardhat-home npx hardhat test",
    "test:coverage": "HOME=/tmp/hardhat-home npx hardhat coverage",
    "node": "HOME=/tmp/hardhat-home npx hardhat node",
    "node:fork": "FORK_RPC_URL=https://bsc-dataseed.binance.org/ HOME=/tmp/hardhat-home npx hardhat node",
    "deploy": "HOME=/tmp/hardhat-home npx hardhat run scripts/deploy.js",
    "deploy:local": "HOME=/tmp/hardhat-home npx hardhat run scripts/deploy-local-fork.js --network localhost",
    "deploy:testnet": "HOME=/tmp/hardhat-home npx hardhat run scripts/deploy-bnb-testnet.js --network bnbTestnet",
    "verify:guardian": "hardhat verify --network bnbTestnet",
    "clean": "npx hardhat clean"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.28.5"
  }
}
